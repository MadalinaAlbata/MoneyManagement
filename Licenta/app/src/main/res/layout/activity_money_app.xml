<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MoneyApp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/moneyapp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Money Management"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="250dp"
    android:textSize="25sp"
    android:textColor="#000"/>

    </RelativeLayout>



    <RelativeLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagine_expense"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/buton_expensee"/>




    <Button
        android:layout_toRightOf="@id/imagine_expense"
        android:id="@+id/button_expense"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:text="Expenses"
        android:textSize="10sp"
        android:textStyle="italic" />

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_below="@+id/imagine_expense"
    android:background="@drawable/buton_income"
    android:layout_marginTop="8dp"


    />
    <Button
        android:id="@+id/button_income"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/imagine_expense"
        android:layout_toRightOf="@id/imagine_expense"
        android:background="#fff"
        android:text="Incomes"
        android:textSize="10sp"
        android:textStyle="italic"
        />

        <ImageView
            android:id="@+id/imagine_transaction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_income"
            android:layout_marginTop="8dp"
            android:background="@drawable/buton_transaction" />

    <Button
        android:id="@+id/button_transaction"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:onClick="send"
        android:text="Transactions"
        android:layout_below="@+id/button_income"
        android:background="#fff"
        android:layout_toRightOf="@id/imagine_transaction"
        android:textSize="10sp"
        android:textStyle="italic"
        />
    <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="8dp"
    android:layout_below="@id/button_transaction"
    android:id="@+id/imagine_statistics"
    android:background="@drawable/buton_statistics"/>

        <Button
            android:id="@+id/button_statistics"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/button_transaction"
            android:layout_toRightOf="@+id/imagine_statistics"
            android:background="#fff"
            android:text="Statistics"
            android:textSize="10dp"
            android:textStyle="italic"

            />

    </RelativeLayout>

    </LinearLayout>
</ScrollView>